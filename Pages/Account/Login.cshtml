@page
@model Blazor_With_Cookies.Pages.Account.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>

    <form method="post" asp-page="/Account/Login">
        <input type="text" asp-for="Username" name="username" placeholder="Username" />
        <br />
        <input type="password" asp-for="Password" name="password" placeholder="Password" />
        <br />
        <button type="submit">Login</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p style="color:red">@Model.ErrorMessage</p>
    }
</body>
</html>
